@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

        <div class="form-group">
            <label for="">Please select the parking lot to manage counts for</label>
            @Html.DropDownListFor(x => Model.SelectedLot, new SelectList(Model.Lots, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "Lots" })
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-lg float-right" type="submit" id="submitLot">Select Lot</button>
        </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#submitLot').click(function(){
            var lotNumber = $('#Lots').val();
            console.log('Naviagting to /Lot/' + lotNumber);
            window.location.href = '/Lot/'+lotNumber;
        });
    });
</script>